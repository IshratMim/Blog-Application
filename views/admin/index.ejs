<div class="p-16 flex flex-col justify-center items-center">
    <h3 class="text-3xl font-bold items-start ">Sign in</h3>
    <form action="/admin" method="POST" class="flex flex-col p-8 ">

        <label for="username" class="font-semibold text-2xl py-4">Username</label>
        <input class="w-96 h-16 " type="text" placeholder="Enter Username" name="username">

        <label for="password" class="font-semibold text-2xl py-4">Password</label>
        <input class="w-96 h-16  " type="password" placeholder="Enter Password" name="password">

        <button type="submit"
            class=" bg-black text-white w-1/4 h-12 text-center pl-4 pt-2 rounded mt-4  flex justify-start items-start  text-xl font-semibold">Log
            In</button>


    </form>
</div>

