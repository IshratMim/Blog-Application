<div class="w-full flex flex-col">
    <div class="flex  flex-col justify-center items-center text-center  p-8">

        <div class="my-4  ">
            <h1 class="font-bold text-6xl ">Hi, I am Mim</h1>
            <p class="text-4xl"> Web developer</p>

        </div>
        <div class="flex flex-col items-start w-full max-w-screen-lg">
            <img src="./img/blog.jpg" class="hero-image rounded-lg" width="981" height="528 ">

            <h1 class="text-4xl py-8  font-medium  ">Latest Post</h1>
            <ul class="w-full list-none p-0 m-0">
                <% Data.forEach(post=> { %>


                    <li class="py-4 border-b border-gray-200 text-xl ">
                        <a href="/post/<%= post._id%>" class="flex justify-between">
                            <span>
                                <%= post.title %>
                            </span>
                            <span>
                                <%= post.createdAt.toDateString() %>
                            </span>
                        </a>
                    </li>
                    <% }) %>
            </ul>
            <% if (nextPage!==null) { %>
                <a href="/?page=<%= nextPage%>" class="mt-4 text-xl  hover:text-blue-700">&lt; View older posts</a>

                <% } %>


        </div>
    </div>

</div>